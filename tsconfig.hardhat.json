{
  "compilerOptions": {
    "target": "ES2023",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "mocha"],
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "./hardhat-config.cts",
    "./contracts/deploy/**/*.ts",
    "./contracts/tasks/**/*.ts",
    "./contracts/test/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
