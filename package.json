{
  "name": "safevoice",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://safevoice009.github.io/Safevoice-cto/",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "hardhat:compile": "hardhat compile",
    "hardhat:test": "hardhat test",
    "hardhat:coverage": "hardhat coverage",
    "hardhat:deploy": "hardhat deploy",
    "hardhat:deploy:voice": "hardhat deploy --tags VoiceToken",
    "hardhat:deploy:vesting": "hardhat deploy --tags VoiceVesting",
    "security:coverage": "npm run hardhat:coverage && node scripts/enforce-hardhat-thresholds.mjs",
    "security:gas": "REPORT_GAS=true npm run hardhat:test && node scripts/enforce-gas-thresholds.mjs",
    "test:contracts": "hardhat test",
    "deploy:voice": "hardhat run scripts/deploy-voice-token.ts --network mainnet",
    "deploy:voice:local": "hardhat run scripts/deploy-voice-token.ts --network localhost",
    "deploy:vesting": "hardhat run scripts/deploy-voice-vesting.ts --network mainnet",
    "deploy:vesting:local": "hardhat run scripts/deploy-voice-vesting.ts --network localhost",
    "configure:vesting": "hardhat run scripts/configure-vesting-schedules.ts --network mainnet",
    "configure:vesting:local": "hardhat run scripts/configure-vesting-schedules.ts --network localhost",
    "deploy:vault": "hardhat deploy --tags SafeVoiceVault --network mainnet",
    "coverage:contracts": "hardhat coverage",
    "lint:contracts": "solhint 'contracts/src/**/*.sol'",
    "export:abis": "npm run hardhat:compile && node scripts/export-abis.mjs"
  },
  "dependencies": {
    "@rainbow-me/rainbowkit": "^1.3.7",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.4.0",
    "@tanstack/react-query": "^4.42.0",
    "@types/dompurify": "^3.0.5",
    "crypto-js": "^4.2.0",
    "dompurify": "^3.3.0",
    "ethers": "^5.8.0",
    "framer-motion": "^12.23.24",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.548.0",
    "marked": "^16.4.1",
    "openpgp": "^6.2.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^16.2.4",
    "react-router-dom": "^6.30.1",
    "three": "^0.181.0",
    "viem": "^1.21.4",
    "wagmi": "^1.4.13",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@openzeppelin/contracts": "^5.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/chai": "^4.3.11",
    "@types/crypto-js": "^4.2.2",
    "@types/jest-axe": "^3.5.9",
    "@types/mocha": "^10.0.7",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/three": "^0.181.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "chai": "^4.4.1",
    "dotenv": "^16.3.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "gh-pages": "^6.3.0",
    "globals": "^16.4.0",
    "hardhat": "^2.22.6",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "^1.0.10",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "solhint": "^3.6.2",
    "solidity-coverage": "^0.8.6",
    "tailwindcss": "^3.4.18",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^5.4.10",
    "vitest": "^4.0.3"
  }
}
